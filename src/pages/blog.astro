---
import BaseLayout from "../layouts/BaseLayout.astro";
import BlogPost from "../components/BlogPost.astro";
// import Card from "../components/Card.astro";
const allPosts = await Astro.glob('../pages/posts/*.md');
const pageTitle = "Pete's Blog";
---

<BaseLayout title={pageTitle}>
  <main>
      <h1><span class="text-gradient">Pete's Blog</span></h1>
    <p class="">This is the text for the Blog page.</p>
    <p>
      Lorem ipsum dolor sit amet consectetur adipisicing elit. Esse id et, omnis
      officia dolores aliquam earum, dignissimos beatae quos minus, quod
      laboriosam quia assumenda cum ex ea in ad molestiae.
    </p>

    <ul>
      {allPosts.map((post) => <BlogPost url={post.url} title={post.frontmatter.title} /> )}
    </ul>
